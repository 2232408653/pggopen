/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

/* button {
  background: rgb(218, 52, 11);
} */

button:focus {
  /* box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19); */
  outline: 0;
  background: white;
}

button::after {
  border: none;
}

button {
  /* display: inline-block; */
  padding: 15rpx 25rpx;
  font-size: 24rpx;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  outline: none;
  color: #fff;
  background-color: #4caf50;
  border: none;
  border-radius: 15rpx;
  box-shadow: 0 9rpx #999;
}

button:hover {
  background-color: #3e8e41;
}

button:active {
  background-color: #3e8e41;
  box-shadow: 0 5rpx #666;
  transform: translateY(4rpx);
}
